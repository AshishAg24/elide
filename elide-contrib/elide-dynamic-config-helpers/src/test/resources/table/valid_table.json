{
    "tables": [
        {
            "name": "PlayerStats",
            "table": "player_stats",
            "schema": "gamedb",
            "description":"A long description",
            "cardinality" : "large",
            "readAccess" : "A user is admin or is a player in the game",
            "joins": [
                {
                    "name": "playerCountry",
                    "to": "country",
                    "type": "toOne",
                    "definition": "${to}.id = ${from}.country_id"
                }
            ],
            "measures" : [
                {
                    "name" : "highScore",
                    "type" : "number",
                    "definition": "MAX(score)"
                }
            ],
            "dimensions" : [
                {
                "name" : "countryCode",
                "type" : "text",
                "definition" : "playerCountry.isoCode"
                },
                {
                "name" : "createdOn",
                "type" : "time",
                "definition" : "create_on",
                "grains": ["{{hour}}", "{{day}}"]
                }
            ]
        }
    ]
}
